---
import { CardPost } from "@features/blog/components/CardPost";
import { SectionTitle } from "@features/blog/components/SectionTitle";
import { SectionLabel } from "@features/blog/components/SectionLabel";
import type { Post } from "@interfaces/Post";

interface Props {
  label: string;
  title: string;
  description?: string;
  posts: Post[];
}

const { posts, label, title, description } = Astro.props;
---

<section>
  <header class="header">
    <h2 class="wrapper-title">
      <SectionLabel>{label}</SectionLabel>
      <SectionTitle>{title}</SectionTitle>
    </h2>
  </header>
  {description && <p class="description">Découvrez les dernières actualités sur le XRP. Restez informé des développements majeurs, des analyses approfondies et des tendances récentes concernant le XRP, la cryptomonnaie innovante au cœur de l'écosystème financier.</p>}
  <div class="posts">
    {posts.map((post) => <CardPost post={post} />)}
  </div>
</section>

<style>
  section {
    margin: 80px 0;
    @media screen and (max-width: 768px) {
      margin: 12px 0;
    }
  }

  .description {
    font-size: 29px;
    line-height: 1.3;
    font-weight: 500;

    @media screen and (max-width: 768px) {
      font-size: 18px;
      margin: 32px 0;
    }
  }

  .posts {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 16px;
    margin-top: 48px;

    @media screen and (max-width: 980px) {
      grid-template-columns: 1fr 1fr;
      margin-top: 24px;
    }

    @media screen and (max-width: 768px) {
      grid-template-columns: 1fr;
      margin-top: 12px;
    }
  }

  .wrapper-title {
    display: flex;
    flex-direction: column;
  }

  .accroche {
    font-size: 18px;
    color: var(--blue-950);
    max-width: 900px;
    line-height: 1.4;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: end;
    margin-bottom: 40px;

    @media screen and (max-width: 768px) {
      display: block;
      margin-bottom: 18px;
    }
  }
</style>
